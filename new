<script>
    (function() {
        // Header toggle: accessible + persistent
        const btn = document.getElementById('toggleHeaderBtn');
        const content = document.getElementById('headerContent');
        const STORAGE_KEY = 'headerCollapsed_v1';

        if (btn && content) {
            // restore state
            const saved = localStorage.getItem(STORAGE_KEY);
            if (saved === 'true') {
                content.classList.add('collapsed');
                content.setAttribute('aria-hidden', 'true');
                btn.setAttribute('aria-expanded', 'false');
                btn.textContent = '+ Expand';
            } else {
                content.classList.remove('collapsed');
                content.setAttribute('aria-hidden', 'false');
                btn.setAttribute('aria-expanded', 'true');
                btn.textContent = '‚àí Minimize';
            }

            function toggleHeader() {
                const isCollapsed = content.classList.toggle('collapsed');
                content.setAttribute('aria-hidden', isCollapsed ? 'true' : 'false');
                btn.setAttribute('aria-expanded', isCollapsed ? 'false' : 'true');
                btn.textContent = isCollapsed ? '+ Expand' : '‚àí Minimize';
                try { localStorage.setItem(STORAGE_KEY, isCollapsed ? 'true' : 'false'); } catch (e) {}
            }

            btn.addEventListener('click', toggleHeader);
            btn.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); toggleHeader(); }
            });
        }

        // Custom form validation (neutral messages, no red browser outline)
        const form = document.getElementById('contactForm');
        const formMessage = document.getElementById('formMessage');
        if (form) {
            function showMessage(text) {
                formMessage.textContent = text;
                formMessage.style.display = 'block';
            }
            function clearMessage() { formMessage.textContent = ''; formMessage.style.display = 'none'; }

            form.addEventListener('submit', function(e) {
                e.preventDefault();
                clearMessage();

                const name = document.getElementById('name').value.trim();
                const email = document.getElementById('email').value.trim();
                const message = document.getElementById('message').value.trim();

                if (!name) { showMessage('Please enter your name.'); document.getElementById('name').focus(); return; }
                const emailRe = /^\S+@\S+\.\S+$/;
                if (!email || !emailRe.test(email)) { showMessage('Please enter a valid email address.'); document.getElementById('email').focus(); return; }
                if (!message) { showMessage('Please enter your message.'); document.getElementById('message').focus(); return; }

                // simulate successful submit
                showMessage('Thank you ‚Äî your message has been received.');
                form.reset();
            });
        }
    })();
</script>

